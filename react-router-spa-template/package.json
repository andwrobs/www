{
	"name": "react-router-spa-template",
	"version": "1.0.0",
	"description": "starter for react router spa mode",
	"author": "andwrobs",
	"type": "module",
	"files": [
		"build"
	],
	"scripts": {
		"dev": "react-router dev",
		"build": "react-router build",
		"build:analyze": "react-router build --mode analyze",
		"preview": "vite preview",
		"generate:schema": "openapi-typescript http://localhost:8000/v3/api-docs -o \"src/lib/api/generated/openapi-schema.ts\"",
		"typecheck": "react-router typegen && tsc",
		"format": "biome format . --write",
		"format:check": "biome format .",
		"lint": "biome lint . --write",
		"lint:check": "biome lint .",
		"fix": "biome check . --write",
		"fix:check": "biome check .",
		"test:run": "vitest run",
		"test:watch": "vitest --silent=true",
		"test:watch:verbose": "vitest",
		"test:debug": "vitest run --inspect --no-file-parallelism",
		"test:update-snapshots": "vitest run -u",
		"test:coverage": "vitest run --coverage --silent=true",
		"test:coverage:verbose": "vitest run --coverage",
		"test": "npm run typecheck && npm run test:coverage && npm run build"
	},
	"dependencies": {
		"@fontsource/inter": "^5.2.8",
		"@hookform/resolvers": "^5.2.2",
		"@react-router/node": "^7.9.4",
		"@react-router/serve": "^7.9.4",
		"@tailwindcss/vite": "^4.1.14",
		"isbot": "^5",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"react-hook-form": "^7.65.0",
		"react-router": "^7.9.4",
		"tailwindcss": "^4.1.14",
		"zod": "^4.1.12",
		"zustand": "^5.0.8"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.6",
		"@react-router/dev": "^7.9.4",
		"@testing-library/dom": "^10.4.1",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^24.7.2",
		"@types/react": "^19.2.2",
		"@types/react-dom": "^19.2.2",
		"@vitejs/plugin-react": "^5.0.4",
		"@vitest/ui": "^3.2.4",
		"jsdom": "^27.0.0",
		"lefthook": "^1.13.6",
		"rollup-plugin-visualizer": "^6.0.4",
		"typescript": "^5.9.3",
		"vite": "^7.1.10",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4"
	}
}
